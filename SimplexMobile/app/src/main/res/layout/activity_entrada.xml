<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/scrollView" >
    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        tools:context="com.ntecprograms.simplexmobile.EntradaActivity">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:id="@+id/txtFOMaxZ"
            android:textSize="10dp"
            android:text="FO Max(Z) =    "
            android:layout_above="@+id/txtSinal"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:id="@+id/txtEntrada"
            android:layout_alignParentTop="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:textSize="20dp"
            android:layout_toRightOf="@+id/txtFOMaxZ"
            android:layout_toEndOf="@+id/txtFOMaxZ" />

        <TextView
            android:layout_width="40dp"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:id="@+id/txtSinal"
            android:layout_below="@+id/txtEntrada"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:textSize="30dp"
            android:gravity="center"
            android:text="+" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:id="@+id/txtNumero"
            android:layout_below="@+id/txtEntrada"
            android:layout_alignRight="@+id/txtEntrada"
            android:layout_alignEnd="@+id/txtEntrada"
            android:textSize="30dp"
            android:layout_toRightOf="@+id/txtSinal"
            android:layout_toEndOf="@+id/txtSinal" />

        <ScrollView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/scrollView2"
            android:layout_below="@+id/txtNumero"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" >

            <HorizontalScrollView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/horizontalScrollView" >

                <GridLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:id="@+id/gridLayout" >

                    <TextView
                        android:layout_width="150dp"
                        android:layout_height="75dp"
                        android:textAppearance="?android:attr/textAppearanceLarge"
                        android:text="Xn"
                        android:id="@+id/textView26"
                        android:layout_row="0"
                        android:layout_column="0"
                        android:gravity="center"
                        android:layout_columnSpan="2"
                        android:clickable="true"
                        android:onClick="fAddX" />

                    <TextView
                        android:layout_width="75dp"
                        android:layout_height="75dp"
                        android:textAppearance="?android:attr/textAppearanceLarge"
                        android:text="DEL"
                        android:id="@+id/textView29"
                        android:layout_row="0"
                        android:layout_column="2"
                        android:gravity="center"
                        android:clickable="true"
                        android:onClick="fDel" />

                    <TextView
                        android:layout_width="75dp"
                        android:layout_height="75dp"
                        android:textAppearance="?android:attr/textAppearanceLarge"
                        android:text="C"
                        android:id="@+id/textView27"
                        android:layout_row="0"
                        android:layout_column="3"
                        android:gravity="center"
                        android:clickable="true"
                        android:onClick="fClear" />

                    <TextView
                        android:layout_width="75dp"
                        android:layout_height="75dp"
                        android:textAppearance="?android:attr/textAppearanceLarge"
                        android:text="1"
                        android:id="@+id/textView3"
                        android:layout_row="1"
                        android:layout_column="0"
                        android:gravity="center"
                        android:clickable="true"
                        android:onClick="n1" />

                    <TextView
                        android:layout_width="75dp"
                        android:layout_height="75dp"
                        android:textAppearance="?android:attr/textAppearanceLarge"
                        android:text="2"
                        android:id="@+id/textView4"
                        android:layout_row="1"
                        android:layout_column="1"
                        android:gravity="center"
                        android:clickable="true"
                        android:onClick="n2" />

                    <TextView
                        android:layout_width="75dp"
                        android:layout_height="75dp"
                        android:textAppearance="?android:attr/textAppearanceLarge"
                        android:text="3"
                        android:id="@+id/textView5"
                        android:layout_row="1"
                        android:layout_column="2"
                        android:gravity="center"
                        android:clickable="true"
                        android:onClick="n3" />

                    <TextView
                        android:layout_width="75dp"
                        android:layout_height="75dp"
                        android:textAppearance="?android:attr/textAppearanceLarge"
                        android:text=">"
                        android:id="@+id/textView6"
                        android:layout_row="1"
                        android:layout_column="3"
                        android:gravity="center"
                        android:clickable="true"
                        android:onClick="fMaior" />

                    <TextView
                        android:layout_width="75dp"
                        android:layout_height="75dp"
                        android:textAppearance="?android:attr/textAppearanceLarge"
                        android:text="4"
                        android:id="@+id/textView7"
                        android:layout_row="2"
                        android:layout_column="0"
                        android:gravity="center"
                        android:clickable="true"
                        android:onClick="n4" />

                    <TextView
                        android:layout_width="75dp"
                        android:layout_height="75dp"
                        android:textAppearance="?android:attr/textAppearanceLarge"
                        android:text="5"
                        android:id="@+id/textView8"
                        android:layout_row="2"
                        android:layout_column="1"
                        android:gravity="center"
                        android:clickable="true"
                        android:onClick="n5" />

                    <TextView
                        android:layout_width="75dp"
                        android:layout_height="75dp"
                        android:textAppearance="?android:attr/textAppearanceLarge"
                        android:text="6"
                        android:id="@+id/textView9"
                        android:layout_row="2"
                        android:layout_column="2"
                        android:gravity="center"
                        android:clickable="true"
                        android:onClick="n6" />

                    <TextView
                        android:layout_width="75dp"
                        android:layout_height="75dp"
                        android:textAppearance="?android:attr/textAppearanceLarge"
                        android:text=">="
                        android:id="@+id/textView10"
                        android:layout_row="2"
                        android:layout_column="3"
                        android:gravity="center"
                        android:clickable="true"
                        android:onClick="fMaiorIgual" />

                    <TextView
                        android:layout_width="75dp"
                        android:layout_height="75dp"
                        android:textAppearance="?android:attr/textAppearanceLarge"
                        android:text="7"
                        android:id="@+id/textView11"
                        android:layout_row="3"
                        android:layout_column="0"
                        android:gravity="center"
                        android:clickable="true"
                        android:onClick="n7" />

                    <TextView
                        android:layout_width="75dp"
                        android:layout_height="75dp"
                        android:textAppearance="?android:attr/textAppearanceLarge"
                        android:text="8"
                        android:id="@+id/textView12"
                        android:layout_row="3"
                        android:layout_column="1"
                        android:gravity="center"
                        android:clickable="true"
                        android:onClick="n8" />

                    <TextView
                        android:layout_width="75dp"
                        android:layout_height="75dp"
                        android:textAppearance="?android:attr/textAppearanceLarge"
                        android:text="9"
                        android:id="@+id/textView13"
                        android:layout_row="3"
                        android:layout_column="2"
                        android:gravity="center"
                        android:clickable="true"
                        android:onClick="n9" />

                    <TextView
                        android:layout_width="75dp"
                        android:layout_height="75dp"
                        android:textAppearance="?android:attr/textAppearanceLarge"
                        android:text="&lt;"
                        android:id="@+id/textView14"
                        android:layout_row="3"
                        android:layout_column="3"
                        android:gravity="center"
                        android:clickable="true"
                        android:onClick="fMenor" />

                    <TextView
                        android:layout_width="75dp"
                        android:layout_height="75dp"
                        android:textAppearance="?android:attr/textAppearanceLarge"
                        android:text="0"
                        android:id="@+id/textView15"
                        android:layout_row="4"
                        android:layout_column="0"
                        android:gravity="center"
                        android:clickable="true"
                        android:onClick="n0" />

                    <TextView
                        android:layout_width="75dp"
                        android:layout_height="75dp"
                        android:textAppearance="?android:attr/textAppearanceLarge"
                        android:text="."
                        android:id="@+id/textView16"
                        android:layout_row="4"
                        android:layout_column="1"
                        android:gravity="center"
                        android:clickable="true"
                        android:onClick="fPonto" />

                    <TextView
                        android:layout_width="75dp"
                        android:layout_height="75dp"
                        android:textAppearance="?android:attr/textAppearanceLarge"
                        android:text="+/-"
                        android:id="@+id/textView17"
                        android:layout_row="4"
                        android:layout_column="2"
                        android:gravity="center"
                        android:clickable="true"
                        android:onClick="fMaisMenos" />

                    <TextView
                        android:layout_width="75dp"
                        android:layout_height="75dp"
                        android:textAppearance="?android:attr/textAppearanceLarge"
                        android:text="&lt;="
                        android:id="@+id/textView18"
                        android:layout_row="4"
                        android:layout_column="3"
                        android:gravity="center"
                        android:clickable="true"
                        android:onClick="fMenorIgual" />

                    <TextView
                        android:layout_width="150dp"
                        android:layout_height="75dp"
                        android:textAppearance="?android:attr/textAppearanceLarge"
                        android:text="@string/save"
                        android:id="@+id/textView23"
                        android:layout_row="5"
                        android:layout_column="0"
                        android:gravity="center"
                        android:layout_columnSpan="2"
                        android:clickable="true"
                        android:onClick="fSalvar" />

                    <TextView
                        android:layout_width="75dp"
                        android:layout_height="75dp"
                        android:textAppearance="?android:attr/textAppearanceLarge"
                        android:text="@string/back"
                        android:id="@+id/textView24"
                        android:layout_row="5"
                        android:layout_column="2"
                        android:gravity="center"
                        android:clickable="true"
                        android:onClick="fVoltar" />

                    <TextView
                        android:layout_width="75dp"
                        android:layout_height="75dp"
                        android:textAppearance="?android:attr/textAppearanceLarge"
                        android:text="="
                        android:id="@+id/textView19"
                        android:layout_row="5"
                        android:layout_column="3"
                        android:gravity="center"
                        android:clickable="true"
                        android:onClick="fIgual" />

                </GridLayout>
            </HorizontalScrollView>
        </ScrollView>

    </RelativeLayout>
</ScrollView>